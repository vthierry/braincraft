	booktitle = {Handbook of self-regulation of learning and performance},
	publisher = {Routledge/Taylor \& Francis Group},
	author = {Hadwin, Allyson Fiona and Järvelä, Sanna and Miller, Mariel},
	year = {2011},
	keywords = {Collaborative Learning, Self-Regulated Learning, Self-Regulation, Social Processes},
	pages = {65--84},
}

