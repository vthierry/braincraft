	number = {4},
	urldate = {2021-12-09},
	journal = {Journal of Continuing Education in the Health Professions},
	author = {Pereles, Lauretta and Lockyer, Jocelyn and Fidler, Herta},
	year = {2002},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1002/chp.1340220404},
	keywords = {Change in practice, communities of practice, continuing medical education, group dynamics, practice-based learning, small-group learning},
	pages = {205--213},
}

