@article{romero_creacube_2018-1,
	title = {{CréaCube}, comparaison de la résolution créative de problèmes, chez des enfants et des adultes, par le biais d’une tâche de robotique modulaire. {Mathematice} 61. {En} ligne : http://revue.sesamath.net/spip.php?article1104},
