	journal = {Computers \& Education},
	author = {Zheng, Juan and Xing, Wanli and Zhu, Gaoxia},
	month = jul,
	year = {2019},
	keywords = {Self-regulated learning, STEM education, Sequential mining, Socially shared regulation},
	pages = {34--48},
}

@article{emerson_multimodal_2020,
