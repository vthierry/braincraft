	file = {Oztop_Arbib_2002_Schema_design_and_implementation_of_the_grasp-related_mirror_neuron_system.pdf:/local/data/mnemosyne/refs/zotero/storage/VBBRNTFK/Oztop_Arbib_2002_Schema_design_and_implementation_of_the_grasp-related_mirror_neuron_system.pdf:application/pdf},
}

