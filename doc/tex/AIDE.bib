	doi = {10.1007/s00180-020-01041-8},
	abstract = {Many statistical problems involve the estimation of a \$\${\textbackslash}left( d{\textbackslash}times d{\textbackslash}right) \$\$orthogonal matrix \$\${\textbackslash}varvec\{Q\}\$\$. Such an estimation is often challenging due to the orthonormality constraints on \$\${\textbackslash}varvec\{Q\}\$\$. To cope with this problem, we use the well-known PLU decomposition, which factorizes any invertible \$\${\textbackslash}left( d{\textbackslash}times d{\textbackslash}right) \$\$matrix as the product of a \$\${\textbackslash}left( d{\textbackslash}times d{\textbackslash}right) \$\$permutation matrix \$\${\textbackslash}varvec\{P\}\$\$, a \$\${\textbackslash}left( d{\textbackslash}times d{\textbackslash}right) \$\$unit lower triangular matrix \$\${\textbackslash}varvec\{L\}\$\$, and a \$\${\textbackslash}left( d{\textbackslash}times d{\textbackslash}right) \$\$upper triangular matrix \$\${\textbackslash}varvec\{U\}\$\$. Thanks to the QR decomposition, we find the formulation of \$\${\textbackslash}varvec\{U\}\$\$when the PLU decomposition is applied to \$\${\textbackslash}varvec\{Q\}\$\$. We call the result as PLR decomposition; it produces a one-to-one correspondence between \$\${\textbackslash}varvec\{Q\}\$\$and the \$\$d{\textbackslash}left( d-1{\textbackslash}right) /2\$\$entries below the diagonal of \$\${\textbackslash}varvec\{L\}\$\$, which are advantageously unconstrained real values. Thus, once the decomposition is applied, regardless of the objective function under consideration, we can use any classical unconstrained optimization method to find the minimum (or maximum) of the objective function with respect to \$\${\textbackslash}varvec\{L\}\$\$. For illustrative purposes, we apply the PLR decomposition in common principle components analysis (CPCA) for the maximum likelihood estimation of the common orthogonal matrix when a multivariate leptokurtic-normal distribution is assumed in each group. Compared to the commonly used normal distribution, the leptokurtic-normal has an additional parameter governing the excess kurtosis; this makes the estimation of \$\${\textbackslash}varvec\{Q\}\$\$in CPCA more robust against mild outliers. The usefulness of the PLR decomposition in leptokurtic-normal CPCA is illustrated by two biometric data analyses.},
	language = {en},
	number = {2},
	urldate = {2024-02-21},
	journal = {Computational Statistics},
	author = {Bagnato, Luca and Punzo, Antonio},
	month = jun,
	year = {2021},
	keywords = {Common principal components, FG algorithm, Leptokurtic-normal distribution, LU decomposition, Orthogonal matrix, QR decomposition},
	pages = {1177--1195},
}

@inproceedings{camposampiero_towards_2024,
	address = {Cham},
	title = {Towards {Learning} {Abductive} {Reasoning} {Using} {VSA} {Distributed} {Representations}},
